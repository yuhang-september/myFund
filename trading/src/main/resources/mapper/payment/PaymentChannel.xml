<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yuhang.trading.mapper.payment.PaymentChannelMapper">

    <resultMap id="PaymentChannel" type="com.yuhang.trading.entity.payment.PaymentChannel">
        <id column="id" property="id" javaType="int" jdbcType="INTEGER"/>
        <result column="bank" property="bank" javaType="String" jdbcType="CHAR"/>
        <result column="payment_channel" property="paymentChannel" javaType="String" jdbcType="CHAR"/>
    </resultMap>

    <sql id="allColumns">
        bank,
        payment_channel
    </sql>

    <select id="selectByBank" resultMap="PaymentChannel">
        SELECT
        <include refid="allColumns"/>
        FROM ru_payment_channel
        where bank = #{bank}
    </select>

</mapper>